@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAngularjs.cshtml";
}
<h2>Details</h2>
@Html.AntiForgeryToken()
<div ng-controller="CreateCtrl">
    <table class="table">
        <tr>
            <td>ID</td>
            <td>{{Book.ID}}</td>
        </tr>
        <tr>
            <td>Author</td>
            <td>{{Book.Author}}</td>
        </tr>
        <tr>
            <td>Price</td>
            <td>{{Book.Price}}</td>
        </tr>
    </table>
    <a class="btn btn-primary" href="~/Book1/Edit/{{Book.ID}}">編輯</a>
    <a class="btn btn-danger" href="~/Book1/Delete/{{Book.ID}}">刪除</a>
</div>
