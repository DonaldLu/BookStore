@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAngularjs.cshtml";
}
<h2>Create</h2>
@Html.AntiForgeryToken()
<div ng-controller="CreateCtrl">
    <table class="table">
        <tr>
            <td>ID</td>
            <td><input type="number" ng-model="Book.ID" /></td>
        </tr>
        <tr>
            <td>Author</td>
            <td><input type="text" ng-model="Book.Author" /></td>
        </tr>
        <tr>
            <td>Price</td>
            <td><input type="number" ng-model="Book.Price" /></td>
        </tr>
    </table>
    <input class="btn btn-primary" type="button" value="儲存" ng-click="CallCreateBook()" />
    <a ng-href="~/Book1/Index">  返回首頁</a>
</div>
@section Scripts {
    <script>
        var bookid = @ViewBag.ID;
    </script>
    <script src="~/Scripts/WebApp/Book1/CreateCtrl.js"></script>
}